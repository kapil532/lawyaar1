<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back,"
            android:fontFamily="@font/proximanovaregular"
            android:textSize="16dp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shambhu Kumar"
            android:textColor="#fff"
            android:layout_below="@id/t1"
            android:textSize="20dp"
            android:fontFamily="@font/proximanovaregular"
            android:letterSpacing="0.04"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Balance"
            android:textSize="22dp"
            android:textColor="#fff"
            android:fontFamily="@font/proximanovaregular"
            android:paddingLeft="40dp"
            android:paddingTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 3,729.00"
            android:textSize="24dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="@font/proximanovaregular"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp">







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/proximanovaregular"
            android:textColor="#516b9e"
            android:letterSpacing="0.02"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textSize="18dp"
            android:textColor="#D06D88BD"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="end"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp">



            <TextView
                android:id="@+id/tt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bala Ji "
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"
                android:letterSpacing="0.03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Dec - 6:20 AM"
                android:layout_below="@id/tt1"
                android:textSize="14dp"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Rs 14,99"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:layout_below="@id/r1">



            <TextView
                android:id="@+id/tt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shambhu Kummar"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"
                android:letterSpacing="0.03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Dec - 6:20 AM"
                android:layout_below="@id/tt2"
                android:textSize="14dp"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Rs 14,99"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#516b9e"
                android:fontFamily="@font/proximanovaregular"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:layout_below="@id/r2">



            <TextView
                android:id="@+id/tt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sujit Kumar"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"
                android:letterSpacing="0.03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Dec - 6:20 AM"
                android:layout_below="@id/tt3"
                android:textSize="14dp"
                android:textColor="#516b9e"
                android:fontFamily="@font/proximanovaregular"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Rs. 14,99"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#516b9e"
                android:fontFamily="@font/proximanovaregular"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:layout_below="@id/r3">



            <TextView
                android:id="@+id/tt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vishal Kumar"
                android:fontFamily="@font/proximanovaregular"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"
                android:letterSpacing="0.03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Dec - 6:20 AM"
                android:layout_below="@id/tt4"
                android:textSize="14dp"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Rs.14,99"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovaregular"
                android:textColor="#516b9e"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>

    <Button
        android:id="@+id/payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/blue_rounded_button"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/proximanovaregular"
        android:text="add Points"
        android:textSize="16sp" />
</RelativeLayout>