<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/upcoming_lawyer_profile"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:src="@drawable/law"
            app:circularflow_angles="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/upcoming_lawyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Sujit kumar"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/upcoming_lawyer_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/upcoming_lawyer_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/proximanovaregular"
            android:lines="1"
            android:text="Criminal and civil"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/upcoming_lawyer_profile"
            app:layout_constraintTop_toBottomOf="@id/upcoming_lawyer_name" />

        <TextView
            android:id="@+id/upcoming_session_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="3-3-2023"
            android:textColor="@color/teal_200"
            android:textSize="12sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/calender_icon"
            app:layout_constraintLeft_toRightOf="@id/upcoming_lawyer_profile"
            app:layout_constraintTop_toBottomOf="@id/upcoming_lawyer_expert" />

        <TextView
            android:id="@+id/upcoming_session_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="10 AM"
            android:textColor="@color/teal_200"
            android:textSize="12sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/watch_icon"
            app:layout_constraintEnd_toStartOf="@id/upcoming_status"
            app:layout_constraintLeft_toRightOf="@id/upcoming_session_date"
            app:layout_constraintTop_toBottomOf="@id/upcoming_lawyer_expert" />

        <TextView
            android:id="@+id/upcoming_status"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Confirmed"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:drawableLeftCompat="@drawable/green_dot_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcoming_lawyer_expert" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/upcoming_lawyer_profile" />

        <TextView
            android:id="@+id/upcoming_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_gray_bg"
            android:paddingStart="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="50dp"
            android:paddingBottom="10dp"
            android:text="@string/button_cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_view" />

        <TextView
            android:id="@+id/upcoming_reschedule_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@drawable/booked_appointment_status"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:text="@string/button_reschedule"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>