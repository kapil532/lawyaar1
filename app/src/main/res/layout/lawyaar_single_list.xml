<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    <ImageView
        android:id="@+id/lawaar_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person"/>

    <TextView
        android:id="@+id/lawyaar_name"
        android:layout_toRightOf="@+id/lawaar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/proximanovaregular"
        android:layout_marginLeft="16dp"
        android:text="Sujit kumar"
        />


        <TextView
            android:id="@+id/lawyaar_desc"
            android:layout_toRightOf="@+id/lawaar_icon"
            android:layout_below="@+id/lawyaar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="normal"
            android:fontFamily="@font/proximanovaregular"
            android:layout_marginLeft="16dp"
            android:text="Faimily law expert"
            />


        <TextView
            android:id="@+id/lawyaar_exp"
            android:layout_toRightOf="@+id/lawaar_icon"
            android:layout_below="@+id/lawyaar_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="@font/proximanovaregular"
            android:layout_marginLeft="16dp"
            android:text="5 years exxperience"
            />


        <TextView
            android:id="@+id/lawyaar_lang"
            android:layout_toRightOf="@+id/lawaar_icon"
            android:layout_below="@+id/lawyaar_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/proximanovaregular"
            android:textStyle="normal"
            android:layout_marginLeft="16dp"
            android:text="English/Hindi/Marathi"
            />



        <TextView
            android:id="@+id/lawyaar_charge"
            android:layout_toRightOf="@+id/lawaar_icon"
            android:layout_below="@+id/lawyaar_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/proximanovaregular"
            android:layout_marginLeft="16dp"
            android:text="Rs 10 /min"
            />

        <TextView
            android:id="@+id/lawyaar_more"
            android:layout_below="@+id/lawyaar_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/proximanovaregular"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:text="@string/veiw_details"
            />

        <TextView
            android:id="@+id/book_button"
            android:layout_below="@+id/lawyaar_charge"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:text="Talk"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>