<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lawyaar_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lawyaar"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lawyaar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".auth.OTPActivity" android:exported="true"
            android:theme="@style/Theme.Lawyaar.NoActionBar"></activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Lawyaar.NoActionBar"></activity>

        <activity
            android:name=".auth.PhoneActivity"
            android:theme="@style/Theme.Lawyaar.NoActionBar"></activity>


    </application>



</manifest>